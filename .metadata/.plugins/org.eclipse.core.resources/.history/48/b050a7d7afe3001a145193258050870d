package br.com.universidade.modelo;
/*
 * Modelo==model==beans==dto (data transfer object)==to
 * Design Pattern DTO
 * 1º Todos os atributos devem ser privados
 * 2º Cada atributo deve ter um método getter e um metodo setter
 * 3º ?????
 */
public class Aluno {
	private String nome;
	private String email;
	private int rm;
	// Sintaxe dos métodos
	// <modificador> <retorno do método> <nome do método> (<tipo Param> <nome Param>, ...)
	
	public String getAll() {
		return nome + "\n" + email + "\n" + rm;
	}
	
	public void setAll(String nome, String email, int rm) {
		this.nome = nome;
		this.email = email;
		this.rm = rm;
	}
	
	public void preencherNome(String nome) {
		this.nome = nome.toUpperCase();
	}

	public String retornarNome() {
		return nome;
	}
	
	public void preencherEmail(String pEmail) {
		email = pEmail.toLowerCase();
	}
	
	public String retornarEmail() {
		return email;
	}
	
	public void preencherRm(int pRm) {
		rm = pRm;
	}
	
	public int retornarRm() {
		return rm;
	}
	

}
